@import "../css/mixins.styl"

#facilitator
  width 100%
  height 100%
  .header-top
    height 150px
    width 100%
    position fixed
    top 0
    left 0
    z-index 10
    transform-style preserve-3d
    .sticky-wrapper
      height 150px
      width 100%
      transition all .5s
      &.on
        animation rotate .5s
      .container
        width 100%
        height 50px
        box-sizing border-box
        padding 0 100px
        .position
          float left
          line-height 50px
          padding 0 20px
          &:hover
            background white
          img
            display inline-block
            line-height 50px
          b
            font-size 16px
            font-weight bold
          span
            font-size 16px
            color #898989
        .navbar-nav
          float right
          height 50px
          li
            padding 0 15px
            float left
            line-height 50px
            &:hover
              background white
            &.active
              a
                color red
            a
              color #000
              font-size 16px
              font-weight bold
      .container-bottom
        height 100px
        padding 0 100px
        width 100%
        box-sizing border-box
        background white
        clearFix()
        .navbar-header
          position absolute
          left 100px
          top 50%
          z-index 5
          transform translateY(-50%)
          a
            img
              width 280px
        .search
          position absolute;
          top 50%
          left 50%
          transform translate(-50%,-50%)
          width 600px
          height 38px
          line-height 34px
          border 2px solid #e94840
          background-color #fff
          border-radius 4px
          font-size 14px
          .glyphicon
            position: relative;
            top: 1px;
            display: inline-block;
            font-family: 'Glyphicons Halflings';
            font-style: normal;
            font-weight: 400;
            line-height: 1;
            -webkit-font-smoothing: antialiased
          input
            width 70%
            border none
            height 30px
            outline none
            padding-left 30px
          .searchbtn
            width 20%
            text-align center
            background-color #e94840
            color #fff
            float right
            height 38px
            cursor pointer
  .content
    width 100%
    background #FBF8F8
    margin-top 150px
    clearFix()
    .h2
      line-height 85px
      width 1200px
      margin 0 auto
      font-size 18px
    #service
      width 1048px
      margin 0 auto
      margin-bottom 50px
      li
        a
          width 232px
          height 300px
          border 1px solid #eaeaea
          float left
          margin-right 8px
          margin-bottom 10px
          background #fff
          cursor pointer
          padding 10px
          box-sizing border-box
          &:hover
            box-shadow 5px 5px 15px #ccc
          img
            vertical-align middle
            width 210px
            height 210px
          >div
            height 26px
            line-height 26px
            margin 0
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            &.serviceName
              height 40px
              margin-top 15px
              width 100%
              padding-left 6px
              .iconHome
                float left
                margin 0 6px 5px 0
                display inline-block
                width 22px
                height 22px
                background url("../images/home1.png") no-repeat center
              .name
                font-size 16px
                margin-left 5px
                font-weight bold
            &.serviceRating
              height 26px
              line-height 26px
              margin 0
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
              font-size 12px
              color #929292
              clearFix()
              .goodRating
                float: right
  .supply
    padding-top 60px
    width 100%
    text-align center
    background #fff
    .supplyTil
      font-size 30px
      font-family "微软雅黑"
      font-weight 800
      margin 20px 0 10px 0
      span
        color #e94840
        font-weight 800
      .supplyDes
        margin 0
        font-size 22px
        color #3d3838
  .service
    width 100%
    padding-top 20px
    background #fff
    height 66px
    font-family "微软雅黑"
    box-sizing border-box
    .serList
      width 420px
      margin 0 auto
      .serItem
        float left
        width 33%
        img
          vertical-align middle
          margin-right 10px
  .footer
    width 1200px
    height 170px
    box-sizing border-box
    margin 0 auto
    dl
      width 100%
      height 100%
      display flex
      justify-content space-between
      dt
        width 100px
        font-family " 微软雅黑"
        font-size 18px
        font-weight bold
        margin-left 85px
        position relative
        bottom 20px
        text-align left
        background none
        color #1d1515
      dd
        width 1090px
        height 94px
        a
          display inline-block
          width 8%
          height 30px
          font-size 16px
          color #898989
          text-aligncenter
          font-weight200
          cursorpointer
          font-family"微软雅黑"
          text-align center
          line-height 30px


  .beian
    width 100%
    margin 0 auto
    p
      position relative
      left 80px
      bottom 20px
      font-weight bold
      width 1200px
      margin 0 auto
      background none
      color #1d1515
      font-size 18px
    .hezuo-list
      width 1200px
      margin 0 auto
      clearFix()
      li
        float left
        width 10%
        height 60px
        text-align center
        background #fff
        margin-left 1%
        line-height 55px
        cursor pointer
        img
          vertical-align middle
          border none
  .copyRight
    height 40px
    line-height 40px
    background #fbf8f8
    .copyTil
      width 1200px
      margin 0 auto
      font-size 14px
      color #929292
@keyframes rotate {
  0% {
    transform translateY(-100%) rotateX(90deg)
    opacity .4
  }
  100% {
    transform translateY(0) rotateX(0deg)
    opacity 1
  }
}